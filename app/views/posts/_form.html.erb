<%= form_for @post do |f| %>
  <%= f.label "Title" %><br>
  <%= f.text_field :title %><br>
  <%= f.label "Content" %><br>
  <%= f.text_area :content %><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <%= f.fields_for :categories, Category.new do |category_builder| %>
    <%= category_builder.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
